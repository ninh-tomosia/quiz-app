<div class="container">
  <%= render  "layouts/menu" %>
  <div class="content">
    <div class="form-login">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div id="msg-errors">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email..." %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password..." %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "title-check-box" %>
          </div>
        <% end %>

        <div class="actions">
          <%= link_to  "Sign up", new_user_registration_path, class: "btn btn-danger" %>
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
        <div class="form-group">
          <br>
          <%= link_to  "Forgot your password?", new_user_password_path, class: "btn btn-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render  "layouts/footer" %>